<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="10dp"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/moviesheight"
            android:paddingTop="8dp"
            android:text="Add New Series"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorblack"
            android:textSize="23sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Series Name"
            android:textColor="@color/infoColor"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/series_name"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/moviesheight"
            android:background="@drawable/seriessearchbg"
            android:hint="Series Name"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Series Image Link"
            android:textColor="@color/infoColor"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/series_image_link"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/moviesheight"
            android:background="@drawable/seriessearchbg"
            android:hint="Series Image Link"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Series Category"
            android:textColor="@color/infoColor"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/series_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/moviesheight"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Series Video"
            android:textColor="@color/infoColor"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/series_video"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/moviesheight"
            android:background="@drawable/seriessearchbg"
            android:hint="Series Video Link"
            android:layout_marginBottom="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/moviesheight"
                android:text="Save"
                android:id="@+id/save_series"
                android:textColor="@color/colorwhite"
                android:layout_weight="1"
                android:background="@color/successColor"
                android:layout_margin="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/moviesheight"
                android:text="Cancel"
                android:textColor="@color/colorwhite"
                android:background="@color/errorColor"
                android:layout_weight="1"
                android:layout_margin="30dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>